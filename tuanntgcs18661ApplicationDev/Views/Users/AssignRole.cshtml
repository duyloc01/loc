@model tuanntgcs18661ApplicationDev.Models.CUser

@{
    var RemainingRoleIds = (List<string>)ViewData["RemainingRoleIds"];
    var CurrentRoleIds = (List<string>)ViewData["CurrentRoleIds"];
}
